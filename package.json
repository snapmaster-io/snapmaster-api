{
  "name": "snapmaster-api",
  "version": "0.1.0",
  "description": "API for SnapMaster app",
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/snapmaster-io/snapmaster-api.git"
  },
  "scripts": {
    "start": "ENV=dev node server.js",
    "start:dev": "ENV=dev node server.js",
    "start:devhosted": "ENV=devhosted node server.js",
    "start:prod": "ENV=prod node server.js",
    "build-spa:dev": "cd ../snapmaster && npm run build:dev",
    "build-spa:prod": "cd ../snapmaster && npm run build:prod",
    "copy": "cp -r ../snapmaster/build/* build",
    "build:dev": "PROJ=snapmaster-dev SVC=snapmaster-dev scripts/build.sh",
    "build:prod": "cp Dockerfile-prod Dockerfile; PROJ=snapmaster SVC=snapmaster scripts/build.sh; cp Dockerfile-dev Dockerfile",
    "deploy:dev": "PROJ=snapmaster-dev SVC=snapmaster-dev scripts/deploy.sh",
    "deploy:prod": "PROJ=snapmaster SVC=snapmaster scripts/deploy.sh",
    "activate:dev": "CONFIGURATION=snapmaster-dev scripts/activate.sh",
    "activate:prod": "CONFIGURATION=snapmaster-prod scripts/activate.sh",
    "push:dev": "npm run activate:dev && npm run build-spa:dev && npm run copy && npm run build:dev && npm run deploy:dev",
    "push:prod": "npm run activate:prod && npm run build-spa:prod && npm run copy && npm run build:prod && npm run deploy:prod",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Omri Gazitt",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/firestore": "^2.5.0",
    "@google-cloud/language": "^3.6.2",
    "@google-cloud/pubsub": "^1.1.5",
    "@google-cloud/scheduler": "^1.3.3",
    "@octokit/rest": "^17.0.0",
    "@octokit/webhooks": "^7.1.0",
    "@sendgrid/mail": "^6.5.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "eventsource": "^1.0.7",
    "express": "^4.17.1",
    "express-jwt": "^5.3.1",
    "express-jwt-authz": "^2.3.1",
    "facebook-nodejs-business-sdk": "^5.0.1",
    "google-auth-library": "^5.5.1",
    "jwks-rsa": "^1.6.0",
    "oauth-signature": "^1.5.0",
    "twilio": "^3.39.2",
    "twitter": "^1.7.1",
    "yaml": "^1.7.2"
  }
}
